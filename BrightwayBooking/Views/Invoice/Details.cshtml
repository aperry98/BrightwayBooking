@model BrightwayBooking.Models.Invoice
@{
    ViewData["Title"] = "Details";
}


<header id="gtco-header" class="gtco-cover gtco-cover-md" role="banner" style="background-image: url(/images/img_bg_2.jpg)">
    <div class="overlay"></div>
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-12 col-md-offset-0 text-left">


                <div class="row row-mt-15em">
                    <div class="col-md-6 mt-text animate-box" data-animate-effect="fadeInUp">
                        <h1>Heres the invoice for your trip!</h1>
                    </div>
                    <div class="col-md-5 col-md-push-1 animate-box" data-animate-effect="fadeInRight">
                        <div class="form-wrap">
                            <div class="tab">
                                <div class="tab-content">
                                    <div class="tab-content-inner active" data-content="signup">
                                        <h4>Invoice: @Model.InvoiceNumber</h4>
                                        <form>
                                            <div class="row form-group">
                                                <div class="col-md-12">
                                                    <label for="email">Name</label>
                                                    <input asp-for="Name" class="form-control" disabled />
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col-md-12">
                                                    <label for="email">Country</label>
                                                    <input asp-for="Country.Name" class="form-control" disabled />
                                                </div>
                                            </div>

                                            <div class="row form-group">
                                                <div class="col-md-12">
                                                    <label for="email">Number of Days</label>
                                                    <input asp-for="Days" class="form-control" type="number" disabled />
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col-md-12">
                                                    <label for="email">Total Trip Amount (@Model.Country.CurrencyCode)</label>
                                                    <input asp-for="TotalTripAmount" class="form-control" type="number" disabled/>
                                                </div>
                                            </div>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</header>
